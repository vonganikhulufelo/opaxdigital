<div class="row">
<div class="col-md-6">
<h2><i class="fas fa-table"></i> Price Look-Up
</h2>
<div><% if @suppliers.present? %>Updated at <%= @suppliers.last.updated_at.strftime("%Y-%m-%d %H:%M:%S") %><% end %></div>
</div>
</div>
</div>
<div class="dropdown-divider"></div>
<br>

<div class="row">
    <div class="col-12">
        <div class="card-box table-responsive">
            <table id="responsive-datatable" class="table table-bordered table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                  <tr>
                    <th> Zone District</th>
                    <th> Code</th>
                    <th> Price</th>
                    <th> Description</th>
                  </tr>
                </thead>
                <tbody class="bg-dark">
      			<% @price_lookups.each do |price_lookup| %>
     			<tr>
     				<td><%= price_lookup.zone_district %></td>
     				<td><%= price_lookup.magisterial_code %></td>
     				<td><%= price_lookup.product_price %></td>
     				<td><%= price_lookup.product_description %></td>
     			</tr>	
     			<% end %>
                </tbody>
              </table>
        </div>
    </div>
</div> <!-- end row -->





<script>
var resizefunc = [];
</script>


<script type="text/javascript">
$(document).ready(function() {

// Default Datatable
$('#datatable').DataTable();

//Buttons examples
var table = $('#datatable-buttons').DataTable({
    lengthChange: false,
    buttons: ['copy', 'excel', 'pdf']
});

// Key Tables

$('#key-table').DataTable({
    keys: true
});

// Responsive Datatable
$('#responsive-datatable').DataTable();

// Multi Selection Datatable
$('#selection-datatable').DataTable({
    select: {
        style: 'multi'
    }
});

table.buttons().container()
        .appendTo('#datatable-buttons_wrapper .col-md-6:eq(0)');
} );

</script>

