    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Rebate</div>
      <div class="card-body">
           <%= form_tag(rebate_path, method: "post", class: "form m-b-sm", id: "performance-period-filter-form", remote: false) do %>


            <div class="form-group">
              <%= select_tag "product_id", options_from_collection_for_select( Supplier.all, "id", "Supplier_Name"),{ class: 'form-control form-control-lg m-t-md selectpicker', include_blank: true, required: "required"}  %>
            </div>

            <div class="form-group">
              <%= select_tag "product_id", options_from_collection_for_select( PaymentTerm.all, "id", "PaymentTerm_Description"),{ class: 'form-control form-control-lg m-t-md selectpicker', include_blank: true, required: "required"}  %>
            </div>

            <div class="form-group">
              <%= select_tag "product_id", options_from_collection_for_select( MagisterialDistrict.all.select(:MagisterialDistrict_Zone, :MagisterialDistrict_District), "id", "MagisterialDistrict_Zone"),{ class: 'form-control form-control-lg m-t-md selectpicker', include_blank: true, required: "required"}  %>
            </div>

            <div class="form-group">
              <%= select_tag "product_id", options_from_collection_for_select( ProductDescription.all, "id", "ProductDescription_Product"),{ class: 'form-control form-control-lg m-t-md selectpicker', include_blank: true, required: "required"}  %>
            </div>

            <div class="form-group">
              <%= text_field_tag 'product_price', nil, placeholder: 'Enter product price...', class: "form-control" %>
            </div>

            <div class="form-group">
              <%= text_field_tag 'rebate',nil, placeholder: 'Enter rebate...', class: "form-control" %>
            </div>

            <div class="form-group">
              <%= text_field_tag 'magistrial_district_id', nil, placeholder: 'Enter puchase price...', class: "form-control" %>
            </div>

            <div class="actions">
            <%= submit_tag 'Submit', class: "btn btn-primary btn-block" %>
            </div>
          <% end %>
          
      </div>
    </div>
  </div>