<div class="row">
<div class="col-md-6">
<h2><i class="fas fa-table"></i> Editing Product Price</h2>
</div>
</div>
<div class="dropdown-divider"></div>
<br>

  <div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h4 class="m-t-0 m-b-30 header-title"></h4>
                <div class="col-sm-6">
              <%= form_for(@product_price, method: :put) do %>
                <div class="form-group row">
                    <label for="inputEmail3" class="col-3 col-form-label">Date</label>
                    <div class="col-9">
                       <%= date_field_tag(:month_id, @product_price.productprice_month_id, class: "form-control", required: :true  )%> </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword3" class="col-3 col-form-label">Zone</label>
                    <div class="col-9">
                        <%= select_tag "zone_id", options_from_collection_for_select( Zone.all, "id", "zone_description", @product_price.zone_id),{ class: 'form-control form-control-lg m-t-md selectpicker', include_blank: true, required: "required"}  %> </div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword5" class="col-3 col-form-label">Price</label>
                    <div class="col-9">
                         <%= text_field_tag 'productprice_price', @product_price.productprice_price, placeholder: 'Enter product price...', class: "form-control", required: "required" %></div>
                </div>
                <div class="form-group row">
                    <label for="inputPassword5" class="col-3 col-form-label">Product</label>
                    <div class="col-9">
                        <%= select_tag "product_discription_id", options_from_collection_for_select( ProductDescription.all, "id", "productdescription_product", @product_price.product_description_id),{ class: 'form-control form-control-lg m-t-md selectpicker', include_blank: true, required: "required"}  %></div>
                </div>
                  <%= hidden_field_tag :user_id, value: current_user.user_id %>
                <div class="form-group mb-0 justify-content-end row">
                    <div class="col-9">
                        <button type="submit" class="btn btn-info waves-effect waves-light">Submit</button>
                        <a onclick="history.back(-1)" href="" class="btn btn-secondary waves-effect waves-light">Cancel</a>
                    </div>
                </div>
            <% end %>
            </div>
        </div>
    </div>

</div>




