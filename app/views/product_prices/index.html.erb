<div class="row">
<div class="col-md-6">
<h2><i class="fas fa-table"></i> Prices
<% if current_user.role != "Basic" %>
<%= link_to '<i class="fas fa-plus-square"></i>'.html_safe, new_product_price_path, data: { turbolinks: false } %>
<% end %>
</h2>
<div><% if @product_prices.present? %>Updated at <%= @product_prices.last.updated_at.strftime("%Y-%m-%d %H:%M:%S") %><% end %></div>
</div>
<div class="col-md-6">
  <% if current_user.role != "Basic" %>
  <%= form_tag import_product_prices_path, multipart: true do %>
  <div class="row">
    <div class="col-md-6 ">
      <div class="custom-file">
      <%= file_field_tag :file, class: "custom-file-input",id: "customFile",required: true %>
      <label class="custom-file-label" for="customFile">Choose file</label>
    </div>
    </div>
    <div class="col-md-6">
          <%= button_tag "Submit", class: "btn btn-primary", data: { disable_with: "<i class='fas fa-spinner fa-spin'>" } %>
    </div>
  </div>
  <% end %>
  <% end %>
</div>

</div>
<div class="dropdown-divider"></div>
<br>

<div class="row">
    <div class="col-12">
        <div class="card-box table-responsive">
            <table id="responsive-datatable" class="table table-bordered table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
              <thead>
                  <tr>
                  <% if current_user.role != "Basic" %>
                    <th colspan="2"></th>
                    <% end %>
                    <th>Date</th>
                    <th>Zone</th>
                    <th>Price</th>
                    <th>Description</th>
                  </tr>
                </thead>
                <tbody class="bg-dark">
                  <% @product_prices.each do |product_price| %>
      <tr class="bg-dark">
      <% if current_user.role != "Basic" %>
        <td><%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, product_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_product_price_path(product_price) %> </td>
        <% end %>
        <td>
        <a class='<i class="fas fa-plus"></i>'.html_safe href="#" data-toggle="modal" data-target="#price<%= product_price.id %>"><div class="history"><%= product_price.updated_at.strftime("%Y-%m-%d %H:%M:%S") %></div></a>
        
        <div class="modal fade" id="price<%= product_price.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content bg-dark">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">History</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body"><div class="container">
      <div class="card-body">
      <table class="table">
        <thead>
          <tr  class="bg-dark">
            <th>Date</th>
            <th>Zone</th>
            <th>Decription</th>
            <th>Price</th>
            <th>User</th>
          </tr>
        </thead>
        <tbody>
            <% Log.where(uid: product_price.uid).order("created_at DESC").map do | r |%>
            <tr class="bg-dark">
              <td scope="row"><%= r.description.split('$')[0].to_s %></td>
              <td><%= r.description.split('$')[1].to_s %></td>
              <td><%= r.description.split('$')[2].to_s %></td>
              <td><%= r.description.split('$')[3].to_s %></td>
              <td><%= r.username %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      </div>
  </div>
  </div>
        <div class="modal-footer">
          
        </div>
      </div>
    </div>
  </div>
        </td>
        <td><%= product_price.productprice_zone_class %></td>
        <td><%= product_price.productprice_price %></td>
        <td><%= product_price.productdescription_product %></td>
      </tr>
    <% end %>
                </tbody>
              </table>
        </div>
    </div>
</div> <!-- end row -->





<script>
// Add the following code if you want the name of the file appear on select
$(".custom-file-input").on("change", function() {
  var fileName = $(this).val().split("\\").pop();
  $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
});

$(document).ready(function() {


// Responsive Datatable
$('#responsive-datatable').DataTable();

} );
</script>
