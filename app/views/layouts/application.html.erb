<!DOCTYPE html>
<html>
  <head>
    <title>OpaxDigital</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
 <body class="">

 <div id="wrapper">

            <!-- Topbar Start -->
            <% if logged_in? %>
            <div class="navbar-custom">
                <ul class="list-unstyled topnav-menu float-right mb-0">
                    </li>

                    <li class="dropdown d-none d-lg-block">
                       
                    </li>
        
                    <li class="dropdown notification-list">
                       
                    </li>

                    <li class="dropdown notification-list">
                        <a class="nav-link dropdown-toggle nav-user mr-0 waves-effect waves-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                             <%= image_tag "profile.jpg", class: "rounded-circle" %>
                            <span class="pro-user-name ml-1">
                                <%= current_user.name%> <i class="fas fa-angle-down"></i>
                            </span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right profile-dropdown ">
                            <!-- item-->
                            <div class="dropdown-header noti-title">
                                <h6 class="text-overflow m-0">Welcome! <%= current_user.name%> </h6>
                            </div>
                                <%= link_to '<i class="fas fa-edit"></i> Edit'.html_safe, edit_user_path(current_user), class: "dropdown-item notify-item" %>
                            <%= link_to '<i class="fas fa-sign-out-alt"></i> Logout '.html_safe, logout_path, class: "dropdown-item notify-item" %>

                        </div>
                    </li>
        

                    <li class="dropdown notification-list">
                        <a href="javascript:void(0);" class="nav-link right-bar-toggle waves-effect waves-light">
                            <i class="fe-settings noti-icon"></i>
                        </a>
                    </li>


                </ul>

                <!-- LOGO -->
                <div class="logo-box">
                	<%= link_to '<span class="logo-lg">
                            <i class="fas fa-cogs" height="20">
                            <span class="logo-lg-text-dark"></i> Opax Digital</span>
                        </span>
                        <span class="logo-sm">
                            <!-- <span class="logo-sm-text-dark">M</span> -->
                            <i class="fas fa-cogs" height="24"></i>
                        </span>'.html_safe, root_path, data: { turbolinks: false },class: "logo text-center"%>
                </div>

                <ul class="list-unstyled topnav-menu topnav-menu-left m-0">
                    <li>
                        <button class="button-menu-mobile waves-effect waves-light" id="menu" >
                         <i class="fas fa-bars"></i>
                        </button>
                    </li>
        
                    <li class="dropdown d-none d-lg-block">
                    	<% if can? :create, User %>
                        <a class="nav-link dropdown-toggle waves-effect waves-light" data-toggle="dropdown" href="#" role="button" aria-haspopup="false" aria-expanded="false">
                            Create New
                            <i class="mdi mdi-chevron-down"></i> 
                        </a>
                        <div class="dropdown-menu">
                        	
                             <%= link_to '<i class="fas fa-users"></i> Users'.html_safe, users_path, data: { turbolinks: false },class: "dropdown-item"%>
                             
                            <!-- item-->

                        </div>
                        <% end %>
                    </li>

                    <li class="dropdown dropdown-mega d-none d-lg-block">
                    </li>
                </ul>
            </div>
            <!-- end Topbar -->

            <!-- ========== Left Sidebar Start ========== -->
            <div class="left-side-menu">

                <div class="slimscroll-menu">

                    <!--- Sidemenu -->
                    <div id="sidebar-menu">

                        <ul class="metismenu" id="side-menu">

                            <li>
                                <a href="javascript: void(0);" class="waves-effect" data-toggle="collapse" data-target="#vendor">
                                    <i class="fas fa-gas-pump"></i>
                                    <span class="badge badge-success badge-pill float-right"></span>
                                    <span> Vendors </span>
                                </a>
                                <ul class="nav-second-level collapse"  id="vendor" aria-expanded="true">
                                    <li>
                                        <%= link_to '<i class="fas fa-users"></i> Vendor'.html_safe, suppliers_path, data: { turbolinks: false }%>
                                    </li>
                                    <li>
                                        <%= link_to '<i class="fas fa-users-cog"></i> Vendor Rebates'.html_safe, supplier_rebates_path, data: { turbolinks: false } %>
                                    </li>
                                    <li>
                                    	<%= link_to '<i class="fas fa-user-lock"></i> Vendor Purchase Order'.html_safe, purchase_orders_path, data: { turbolinks: false } %>
                                    </li>
                                </ul>
                            </li>

                            <li>
                                <a href="javascript: void(0);" class="waves-effect" data-toggle="collapse" data-target="#customer">
                                    <i class="fas fa-gas-pump"></i>
                                    <span class="badge badge-success badge-pill float-right"></span>
                                    <span> Customers </span>
                                </a>
                                <ul class="nav-second-level collapse" id="customer" aria-expanded="false">
                                    <li>
                                         <%= link_to '<i class="fas fa-users"></i> Customer'.html_safe, customers_path, data: { turbolinks: false } %>
                                    </li>
                                    <li>
                                         <%= link_to '<i class="fas fa-users-cog"></i> Customer Rebates'.html_safe, customer_rebates_path, data: { turbolinks: false } %>
                                    </li>
                                    <li>
                                        <%= link_to '<i class="fas fa-user-lock"></i> Customer Sales Order'.html_safe, sales_orders_path, data: { turbolinks: false } %>
                                    </li>
                                    
                                </ul>
                            </li>

                            <li>
                                <a href="javascript: void(0);" class="waves-effect" data-toggle="collapse" data-target="#parameter">
                                    <i class="fas fa-oil-can"></i>
                                    <span class="badge badge-success badge-pill float-right"></span>
                                    <span> Parameters </span>
                                </a>
                                <ul class="nav-second-level collapse show" id="parameter" aria-expanded="false">
                                    <li>
                                        <%= link_to '<i class="fas fa-table"></i> Zones'.html_safe, magisterial_districts_path, data: { turbolinks: false }, class: "waves-effect waves-primary" %>
                                    </li>
                                    <li>
                                        <%= link_to '<i class="fas fa-table"></i> Products'.html_safe, product_descriptions_path, data: { turbolinks: false }, class: "waves-effect waves-primary" %>
                                    </li>
                                    <li>
                                        <%= link_to '<i class="fas fa-table"></i> Prices'.html_safe, product_prices_path, data: { turbolinks: false }, class: "waves-effect waves-primary" %>
                                    </li>
                                    <li>
                                        <%= link_to '<i class="fas fa-table"></i> Payment Terms'.html_safe, payment_terms_path, data: { turbolinks: false }, class: "waves-effect waves-primary" %>
                                    </li>
                                    <li>
                                        <%= link_to '<i class="fas fa-table"></i> Price Look-Up'.html_safe, price_lookup_path, data: { turbolinks: false }, class: "waves-effect waves-primary" %>
                                    </li>
                                    <li>
                                        <%= link_to '<i class="fas fa-weight"></i> Sites'.html_safe, sites_path, data: { turbolinks: false }, class: "waves-effect waves-primary" %>
                                    </li>
                                    <li>
                                    </li>
                                </ul>
                            </li>
           
                        </ul>

                    </div>
                    <!-- End Sidebar -->

                    <div class="clearfix"></div>

                </div>
                <!-- Sidebar -left -->

            </div>
            <!-- Left Sidebar End -->

            <!-- ============================================================== -->
            <!-- Start Page Content here -->
            <!-- ============================================================== -->

            <div class="content-page">
                <div class="content">

                    <!-- Start Content-->
                    <div class="container-fluid">
                        <div class="row">
                            <div id="spinner" class="col-lg-1 col-centered mx-auto"> 
                               <div class="spinner-border avatar-lg text-primary" role="status"></div>
                            </div>
                        </div>
                        <% end %>
                        
                        <%= yield %>
                        <% if logged_in? %>

                        
                    </div> <!-- container -->

                </div> <!-- content -->

                <!-- Footer Start -->
                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-md-12 text-center">
                               Copyright Â© OPAX DIGITAL 2019
                            </div>
                           
                        </div>
                    </div>
                </footer>
                <!-- end Footer -->

            </div>

            <!-- ============================================================== -->
            <!-- End Page content -->
            <!-- ============================================================== -->


        </div>
        <% end %>
        <!-- END wrapper -->
    </body>
</html>
