

<br>

<%= link_to 'New User', new_user_path %>

<table class="table">
        <thead>
          <tr  class="bg-dark">
          <th colspan="1"></th>
            <th>Name</th>
            <th>Address</th>
            <th>Contact</th>
            <th>Email</th>
            <th>user</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr class="bg-dark">
            <td><%= link_to '<i class="fas fa-edit"></i>'.html_safe, edit_user_path(user) %> </td>
              <td><%= user.name %></td>
              <td><%= user.address %></td>
              <td><%= user.contact %></td>
              <td><%= user.email %></td>
            </tr>
          <% end %>
        </tbody>
      </table>