<div class="row">
<div class="col-md-6">
<h2><i class="fas fa-weight"></i> Tanks
</div>
</div>
<div class="dropdown-divider"></div>
<br>

  <div class="row">
    <div class="col-md-6">
        <div class="card-box">
            <h4 class="m-t-0 m-b-30 header-title">STOCK-IN</h4>
             <div class="row">
             	<% @tanks.each do |tank| %>
	            <div class="col">
	                <div class="card-box">
	                    <div class="text-right">
	                        <h3 class="mb-1 text-primary"><%= tank.stock_in %></h3>
	                        <p class="mb-1">Product</p>
	                    </div>
	                </div>
	            </div><!-- end col -->
	            <% end %>
	        </div><!-- end row -->
        </div>
    </div>

    <div class="col-md-6">
      <div class="card-box">
         <h4 class="m-t-0 m-b-30 header-title">STOCK-OUT</h4>
          <div class="row">
             	<% @tanks.each do |tank| %>
	            <div class="col">
	                <div class="card-box">
	                    <div class="text-right">
	                        <h3 class="text-primary mb-1"><%= tank.stock_in %></h3>
	                        <p class="mb-1">Product</p>
	                    </div>
	                </div>
	            </div><!-- end col -->
	            <% end %>
	        </div><!-- end row -->
      </div>
    </div>

</div>
<br>
<div class="row">
    <div class="col-12">
        <div class="page-title-box">
            <h4 class="page-title">Fuel Values</h4>
        </div>
    </div>
</div>

 <div class="row">
	<% @product_descriptions.each do |product_description| %>
		<div class="col">
		    <div class="card-box">
		        <i class="fa fa-info-circle text-muted float-right" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="More Info"></i>
		        <h4 class="mt-0 font-16"><%= product_description.productdescription_product %></h4>
		        <h3 class="my-3 text-center">Closing Stock</h3>
		        <h2 class="text-primary my-3 text-center"><span data-plugin="counterup">31,570</span></h2>
		        <p class="mb-0">Opening Stock: 22506</p>
		    </div>
		    <br>
		</div>
	<% end %>
</div>