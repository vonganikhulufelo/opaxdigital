              <thead>
                <tr>
                    <th>Status</th>
                <th>Customer Name</th>
                <th>Zone</th>
                <th>Delivery Date</th>
                <th>Payment</th>
                <th>Delivery Date</th>
                <th>Delivery Note</th>
                <th>Delivery Note Attached</th>
                <th>Invoiced</th>
                <th>Puma</th>
                <th>Recon Status</th>
                <th>Action</th>

                </tr> 
            </thead>
            <tbody class="">
                <% @sales.each do |sale| %>
                <tr>
                <% if sale.status == '3' %>
                <td><div class="btn btn-success btn-rounded w-md waves-effect waves-light">Completed</div></td>
                <% else %>
                    <td><div class="btn btn-danger btn-rounded w-md waves-effect waves-light">Pending</div>
                </td>
                <% end %>
                <td><%= link_to sale.customer_name, sales_order_path(sale.id) %> </td>
                <td><%= sale.zone %></td>
                <td><%= sale.delivered_date %></td>
                <td><%= sale.payment %></td>
                <td><%= sale.delivery_date_on_delivery %></td>
                <td><%= sale.delivery_note_reference %></td>
                <td><%= sale.delivery_note_reference %></td>
                <td><%= sale.invoice %></td>
                <td><%= sale.puma_reference %></td>
                <td><%= sale.recon %></td>
                <td>
                    <div class="btn-group dropdown">
                      <a href="javascript: void(0);" class="dropdown-toggle arrow-none btn btn-light btn-sm" data-toggle="dropdown" aria-expanded="false"><i class="fas fa-ellipsis-h"></i></a>
                      <div class="dropdown-menu dropdown-menu-right">
                        <% if can? :read, SalesOrder %>
                          <%= link_to '<i class="fas fa-eye"></i> View'.html_safe, sale,class: "dropdown-item", data: { turbolinks: false } %>
                          <% end %>
                          <% if can? :create, SalesOrder %>
                          <%= link_to '<i class="fas fa-trash-alt"></i> Delete'.html_safe, sale, method: :delete, data: { confirm: 'Are you sure?' },class: "dropdown-item" %>
                          <% end %>
                      </div>
                  </div>
                  </td>
                </tr>
                <% end %>
            </tbody>
            </table>
            <div class="clearfix">
              <div class="float-left">
                 <%= page_entries_info @sales %>
              </div>
              <div class="float-right">
                <div class="flickr_pagination">
