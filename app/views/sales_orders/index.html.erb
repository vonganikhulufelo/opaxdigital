<div class="row">
<div class="col-md-12">
    <div class="card-box">
        <h4 class="header-title m-t-0 m-b-30"></h4>

        <ul class="nav nav-tabs tabs-bordered">
        <li class="nav-item">
                <a href="#home1-b1" data-toggle="tab" aria-expanded="true" class="nav-link active">
                    <p class=""><strong>All Sales </strong> <span class="badge badge-secondary"><%= @sales.count %></span></p>
                </a>
            </li>
            <li class="nav-item">
                <a href="#home-b1" data-toggle="tab" aria-expanded="false" class="nav-link">
                <p class=""><strong>Step 1 </strong> <span class="badge badge-secondary"><%= @sales.where(status: '1').count %></span></p>
                </a>
            </li>
            <li class="nav-item">
                <a href="#profile-b1" data-toggle="tab" aria-expanded="false" class="nav-link ">
                <p class=""><strong>Step 2 </strong> <span class="badge badge-secondary"><%= @sales.where(status: '2').count %></span></p>
                </a>
            </li>
            <li class="nav-item">
                <a href="#messages-b1" data-toggle="tab" aria-expanded="false" class="nav-link">
                <p class=""><strong>Step 3 </strong> <span class="badge badge-secondary"><%= @sales.where(status: '3').count %></span></p>
                </a>
            </li>
        </ul>
        <div class="tab-content">
        <div class="tab-pane fade show active" id="home1-b1">
                 <table id="responsive-datatable" class="table table-bordered table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
              <thead>
                <tr>
                <th colspan="1"></th>
                <th>Customer Name</th>
                <th>Zone</th>
                <th>Delivery Date</th>
                <th>Payment</th>
                <th>Delivery Date</th>
                <th>Delivery Note</th>
                <th>Delivery Note Attached</th>
                <th>Invoiced</th>
                <th>Puma</th>
                <th>Status</th>
                <th>Recon Status</th>
                </tr> 
            </thead>
            <tbody class="">
                <% @sales.each do |sale| %>
                <tr>
                <% if sale.status == '5' %>
                <td><div class="btn btn-success btn-rounded w-md waves-effect waves-light">Completed</div></td>
                <% else %>
                <td>
                <div class="btn-group">
                        <button type="button" class="btn btn-danger btn-rounded w-md dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="false"> Pending<span class="caret"></span></button>
                        <div class="dropdown-menu">
                        <%= link_to '<i class="fas fa-eye"></i> View'.html_safe, sale, data: { turbolinks: false },class: "dropdown-item" %>
                        <div class="dropdown-divider"></div>
                        <%= link_to '<i class="fas fa-trash-alt"></i> Delete'.html_safe, sale, method: :delete,class: "dropdown-item" %>
                            
                        </div>
                    </div></td>
                <% end %>
                <td><%= link_to sale.customer_name, sales_order_path(sale.id) %> </td>
                <td><%= sale.zone %></td>
                <td><%= sale.delivered_date %></td>
                <td><%= sale.payment %></td>
                <td><%= sale.delivery_date_on_delivery %></td>
                <td><%= sale.delivery_note_reference %></td>
                <td><%= sale.delivery_note_reference %></td>
                <td><%= sale.invoice %></td>
                <td><%= sale.puma_reference %></td>
                <td><%= sale.status %></td>
                <td><%= sale.recon %></td>
                </tr>
                <% end %>
            </tbody>
            </table> 
          </div>

            <div class="tab-pane fade table-responsive" id="home-b1">
                 <table id="responsive-datatable12" class="table table-bordered table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
              <thead>
                <tr>
                <th colspan="1"></th>
                <th>Order Date</th>
                <th>Customer Name</th>
                <th>Payment Type</th>
                <th>Zone</th>
                <th>Deliver Date</th>
                </tr> 
            </thead>
            <tbody class="">
                <% @sales.where(status: '1').each do |sale| %>
                <tr>
                <% if sale.status == '5' %>
                <td><div class="btn btn-success btn-rounded w-md waves-effect waves-light">Success</div></td>
                <% else %>
                <td><div class="btn-group">
                        <button type="button" class="btn btn-danger btn-rounded dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="false"> Pending<span class="caret"></span></button>
                        <div class="dropdown-menu">
                        <%= link_to '<i class="fas fa-eye"></i> View'.html_safe, sale, data: { turbolinks: false },class: "dropdown-item" %>
                        <div class="dropdown-divider"></div>
                        <%= link_to '<i class="fas fa-trash-alt"></i> Delete'.html_safe, sale, method: :delete, data: { confirm: 'Are you sure?' },class: "dropdown-item" %>
                            
                        </div>
                    </div>
                    </td>
                <% end %>
                    <td><%= sale.order_date.strftime("%m/%d/%Y %H:%M:%S") %></td>
                    <td><%= sale.customer_name %></td>
                    <td><%= sale.payment %></td>
                    <td><%= sale.zone %></td>
                    <td><%= sale.delivery_date_on_delivery %></td>
                </tr>
                <% end %>
            </tbody>
              </table> </div>
            <div class="tab-pane " id="profile-b1">
                <table id="responsive-datatable1" class="table table-bordered table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
              <thead>
                <tr>
                <th colspan="1"></th>
                <th>Delivery Date</th>
                <th>Delivery Note Reference</th>
                <th>Delivery Note Attachment</th>
                </tr>
            </thead>
            <tbody class="">
                <% @sales.where(status: '2').each do |sale| %>
                <tr>
                <% if sale.status == '5' %>
                <td><div class="btn btn-success btn-rounded w-md waves-effect waves-light">Success</div></td>
                <% else %>
                <td><div class="btn-group">
                        <button type="button" class="btn btn-danger btn-rounded dropdown-toggle waves-effect waves-light" data-toggle="dropdown" aria-expanded="false"> Pending<span class="caret"></span></button>
                        <div class="dropdown-menu">
                        <%= link_to '<i class="fas fa-eye"></i> View'.html_safe, sale, data: { turbolinks: false },class: "dropdown-item" %>
                        <div class="dropdown-divider"></div>
                        <%= link_to '<i class="fas fa-trash-alt"></i> Delete'.html_safe, sale, method: :delete, data: { confirm: 'Are you sure?' },class: "dropdown-item" %>
                            
                        </div>
                    </div>
                    </td>
                <% end %>
                    <td><%= sale.delivery_date_on_delivery.strftime("%m/%d/%Y %H:%M:%S") %></td>
                    <td><%= sale.delivery_note_reference %></td>
                    <td><%= sale.delivery_attachment %></td>
                <% end %>
                </tr> 
            </tbody>
              </table>
               </div>
            <div class="tab-pane fade" id="messages-b1">
                <table id="responsive-datatable2" class="table table-bordered table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
              <thead>
                  <tr>
                  <th>Status</th>
                <th>Order Date</th>
                <th>Internal Reference</th>
                <th>PO Reference</th>
                <th>Vendor Documentation</th>
                </tr>
            </thead>
            <tbody class="">
               
            </tbody>
              </table></div>
         
        </div>
