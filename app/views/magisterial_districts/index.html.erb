<div class="row">
<div class="col-md-6">
<h2><i class="fas fa-table"></i> Zones
<% if current_user.role != "Basic" %>
<%= link_to '<i class="fas fa-plus-square"></i>'.html_safe, new_magisterial_district_path, data: { turbolinks: false } %>
<% end %>
</h2>
<div><% if @magisterial_districts.present? %>Updated at <%= @magisterial_districts.last.updated_at.strftime("%Y-%m-%d %H:%M:%S") %><% end %></div>
</div>
<div class="col-md-6">
<% if current_user.role != "Basic" %>
  <%= form_tag import_magisterial_districts_path, multipart: true do %>
  <div class="row">
    <div class="col-sm-6 ">
      <div class="custom-file">
      <%= file_field_tag :file, class: "custom-file-input",id: "customFile",required: true %>
      <label class="custom-file-label" for="customFile">Choose file</label>
    </div>
    </div>
    <div class="col-sm-6">
          <%= button_tag "Submit", class: "btn btn-primary", data: { disable_with: "<i class='fas fa-spinner fa-spin'>" } %>
    </div>
  </div>
  <% end %>
  <% end %>
</div>
</div>
<div class="dropdown-divider"></div>
<br>

