                <tr>
                  <% if current_user.role != "Basic" %>
                    <th ></th>
                    <th ></th>
                    <% end %>
                    <th>Date</th>
                    <th>Zone</th>
                    <th>District</th>
                    <th>Code</th>
                    <th>Province</th>
                  </tr>
                </thead>
                <tbody class="bg-dark">
                  <% @magisterial_districts.each do |magisterial_district| %>
                  <tr class="bg-dark">
